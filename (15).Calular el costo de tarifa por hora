Funcion tiempo <- tomar_tiempo
	// 1 definir varibles
	Definir tiempo Como Real;
	// 2 tomar datos o asignar variables
	Escribir "ingrese el tiempo en horas";
	Leer tiempo;
FinFuncion

Funcion tarifa <- tomar_tarifa
	// Definir varibles
	Definir tarifa, costoTotal Como Real;

	Escribir "ingrese  el valor de la tarifa por hora: ";
	Leer tarifa;
FinFuncion

Funcion costoTotal <- calcularCosto(tiempo, tarifa)
	Definir costoTotal Como Real;
	// procesar datos
	costoTotal <- tiempo * tarifa;
	// 4 Mostrar resultado
	Escribir " el costoTotal es de: $", costoTotal;
FinFuncion


Algoritmo calcular_el_costo_tarifa
	Definir costoTotal, tiempo, tarifa como real;
	
	
	tiempo <- tomar_tiempo();
	tarifa <- tomar_tarifa()
	
	costoTotal <- calcularCosto(tiempo, tarifa)
FinAlgoritmo
