Funcion promedio <- tomar_promedio
	// 1 Definir varibles
	Definir nota1_materia1, nota2_materia1, nota3_materia1 Como Real;
	Definir promedio Como Real;
	
	// 2 tomar datos
	Escribir "dijite nota1 de la materia 1";
	Leer nota1_materia1;
	
	Escribir "dijite nota 2 materia 1";
	Leer nota2_materia1;
	
	Escribir "dijite nota 3 materia 1";
	Leer nota3_materia1;
	
	// calcular promedio
	promedio <- (nota1_materia1 + nota2_materia1 + nota3_materia1) /3
FinFuncion

Funcion mensaje <- mostrar_mensaje(promedio)
	mensaje <- "El promedio general de la materia es: " + ConvertirATexto( promedio)
FinFuncion

SubProceso  imprimir_mensaje(mensaje)
	Escribir mensaje
FinSubProceso


Algoritmo promedio_general_materia
	Definir promedio Como Real;
	Definir mensaje como cadena;
	
	promedio <- tomar_promedio()
	mensaje <- mostrar_mensaje(promedio)
	imprimir_mensaje(mensaje)
	
FinAlgoritmo
