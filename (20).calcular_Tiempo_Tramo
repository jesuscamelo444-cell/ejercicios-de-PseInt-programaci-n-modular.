Funcion TiempoTotal <- calcularTiempo(tiempo1, tiempo2, tiempo3)
	TiempoTotal <- tiempo1 + tiempo2 + tiempo3
FinFuncion

Funcion valor <- PedirTiempo(texto)
	Definir valor como real;
	Escribir texto;
	Leer valor;
FinFuncion

SubProceso mostrarTiempo(TiempoTotal)
	Escribir "El tiempo total del viaje es: ", TiempoTotal, " h";
FinSubProceso


Algoritmo calcular_Tiempo_Tramo
	// Definir tipo de varibles
	Definir tiempo1, tiempo2, tiempo3, TiempoTotal Como Real;
	
	// pedir datos con la Funcion PedirTiempo
	tiempo1 <- PedirTiempo("Ingrese el tiempo del tramo 1: ");
	tiempo2 <- PedirTiempo("Ingrese el tiempo del tramo 2: ");
	tiempo3 <- PedirTiempo("Ingrese el tiempo del tramo 3: ");
	
	// calcular la velocidad con la Funcion calcularTiempo
	TiempoTotal <- calcularTiempo(tiempo1, tiempo2, tiempo3)
	
	// mostar resultados con la Funcion mostrarTiempo
	mostrarTiempo(TiempoTotal)
FinAlgoritmo

