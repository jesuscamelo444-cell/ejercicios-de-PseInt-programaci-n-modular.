Funcion dato_base <- tomar_base
	// 1 defeinir tipo de variable
	Definir base Como Real;
	
	// 2 tomar datos o asignar variables
	Escribir "Ingrese la base del rectángulo: ";
	Leer base;
	dato_base <- base
FinFuncion

Funcion dato_altuta <- tomar_altura
	// Definir varibles
	Definir altura Como Real;
	
	// tomar datos o asignar vaibles
	Escribir "ingrese altura del rectángulo: ";
	Leer altura;
	dato_altuta <- altura
FinFuncion

Funcion imprimir_resultados(base, altura)
	// Definir vaibles
	Definir area como real;
	
	// 3 procesar datos
	area <- altura * base
	
	// 4 Mostrar resultados
	Escribir "El área del rectángulo es: ", area;
FinFuncion

Algoritmo calcular_el_area_de_un_rectangulo
	Definir base, altura, area Como Real;
	
	base <- tomar_altura();
	altura <- tomar_altura();
	
	imprimir_resultados(base, altura);
	
FinAlgoritmo
