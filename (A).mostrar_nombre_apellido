Funcion dato_nombre <- tomar_nombre
	Definir dato_nombre Como Caracter;
	dato_nombre <- "jesus"
FinFuncion

Funcion dato_apellido <- tomar_apellido
	Definir dato_apellido Como Caracter;
	dato_apellido <- "camelo"
FinFuncion


Funcion mensaje <- mostrar_mensaje(nombre , apellido)
	mensaje <- "Bienvenido señor: " + nombre + " " + apellido
FinFuncion

Funcion imprimir_mensaje(mensaje)
	Escribir mensaje
FinFuncion

Algoritmo sin_titulo
	Definir nombre, apellido Como Caracter
	Definir mensaje Como Caracter
	
	nombre <- tomar_nombre()
	apellido <- tomar_apellido()
	mensaje <- mostrar_mensaje(nombre , apellido)
	imprimir_mensaje(mensaje)
	
FinAlgoritmo
